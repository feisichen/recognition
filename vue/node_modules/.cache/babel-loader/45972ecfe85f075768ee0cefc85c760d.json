{"ast":null,"code":"import VuePdfEmbed from \"vue-pdf-embed\";\nimport { createLoadingTask } from \"vue3-pdfjs/esm\"; // 获得总页数\n\nexport default {\n  components: {\n    VuePdfEmbed\n  },\n\n  data() {\n    return {\n      source: \"PDF/test.pdf\",\n      pageNum: 1,\n      scale: 1,\n      // 缩放比例\n      numPages: 0 // 总页数\n\n    };\n  },\n\n  mounted() {\n    const loadingTask = createLoadingTask(this.source);\n    loadingTask.promise.then(pdf => {\n      this.numPages = pdf.numPages;\n    });\n  },\n\n  computed: {\n    scaleFun(index) {\n      // 缩放\n      var scale = this.scale;\n      return `transform:scale(${scale})`;\n    }\n\n  },\n  methods: {\n    prev() {\n      if (this.pageNum > 1) {\n        this.pageNum -= 1;\n      }\n    },\n\n    next() {\n      if (this.pageNum < this.numPages) {\n        this.pageNum += 1;\n      }\n    },\n\n    zoomA() {\n      this.scale += 0.1;\n    },\n\n    zoomB() {\n      this.scale -= 0.1;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AACA,OAAOA,WAAP,MAAwB,eAAxB;AACA,SAASC,iBAAT,QAAkC,gBAAlC,C,CAAoD;;AAEpD,eAAe;AACbC,EAAAA,UAAU,EAAE;AACVF,IAAAA;AADU,GADC;;AAIbG,EAAAA,IAAI,GAAG;AACL,WAAO;AACLC,MAAAA,MAAM,EAAE,cADH;AAELC,MAAAA,OAAO,EAAE,CAFJ;AAGLC,MAAAA,KAAK,EAAE,CAHF;AAGM;AACXC,MAAAA,QAAQ,EAAE,CAJL,CAIQ;;AAJR,KAAP;AAMD,GAXY;;AAYbC,EAAAA,OAAO,GAAG;AACR,UAAMC,WAAW,GAAGR,iBAAiB,CAAC,KAAKG,MAAN,CAArC;AACAK,IAAAA,WAAW,CAACC,OAAZ,CAAoBC,IAApB,CAA0BC,GAAD,IAAS;AAChC,WAAKL,QAAL,GAAgBK,GAAG,CAACL,QAApB;AACD,KAFD;AAGD,GAjBY;;AAkBbM,EAAAA,QAAQ,EAAE;AACRC,IAAAA,QAAQ,CAACC,KAAD,EAAQ;AAAE;AAChB,UAAIT,KAAK,GAAG,KAAKA,KAAjB;AACA,aAAQ,mBAAkBA,KAAM,GAAhC;AACD;;AAJO,GAlBG;AAwBbU,EAAAA,OAAO,EAAE;AACPC,IAAAA,IAAI,GAAG;AACL,UAAI,KAAKZ,OAAL,GAAe,CAAnB,EAAsB;AACpB,aAAKA,OAAL,IAAgB,CAAhB;AACD;AACF,KALM;;AAMPa,IAAAA,IAAI,GAAG;AACL,UAAI,KAAKb,OAAL,GAAe,KAAKE,QAAxB,EAAkC;AAChC,aAAKF,OAAL,IAAgB,CAAhB;AACD;AACF,KAVM;;AAWPc,IAAAA,KAAK,GAAG;AACN,WAAKb,KAAL,IAAc,GAAd;AACD,KAbM;;AAcPc,IAAAA,KAAK,GAAG;AACN,WAAKd,KAAL,IAAc,GAAd;AACD;;AAhBM;AAxBI,CAAf",